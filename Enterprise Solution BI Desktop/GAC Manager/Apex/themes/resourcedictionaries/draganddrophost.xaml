<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dragAndDrop="clr-namespace:Apex.DragAndDrop"
                    xmlns:adorners="clr-namespace:Apex.Adorners">
  <Style TargetType="{x:Type dragAndDrop:DragAndDropHost}">
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type dragAndDrop:DragAndDropHost}">
          <Border Background="{TemplateBinding Control.Background}"
                  BorderBrush="{TemplateBinding Control.BorderBrush}"
                  BorderThickness="{TemplateBinding Control.BorderThickness}">
            <Grid x:Name="PART_Host">
              <ContentPresenter/>
              <adorners:AdornerLayer x:Name="PART_AdornerLayer"/>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>